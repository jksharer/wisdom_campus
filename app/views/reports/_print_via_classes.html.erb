<h1>本学期各班级校园秩序情况统计</h1>
<table class="table table-bordered table-striped report-table" id="via-classes">
  <thead>
    <tr>
      <th width="8%">年级</th>
      <th width="8%">班级名称</th>
      <th width="10%">班主任</th>
      <th width="10%">学生数量</th>
      <th width="10%">本学期累计违规</th>
    </tr>
  </thead>

  <tbody>
    <% @iclasses.each do |iclass| %>
      <tr>
        <td><%= iclass.grade.name %></td>
        <td><%= iclass.name %></td>
        <td><%= iclass.header %></td>
        <td><%= iclass.students.size %></td>
        <td><%= behaviors_count_of_class(iclass) %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3" style="text-align: center;"><strong>合计:</strong></td>
      <td><strong><%= my_agency.total_students %></strong></td>
      <td><strong><%= behaviors_count_of_agency(my_agency) %></strong></td>
    </tr>  
  </tbody>
</table>