<h1><%= @semester.name %>各班级校园秩序情况统计</h1>
<table class="table table-bordered table-striped report-table" id="via-classes">
  <thead>
    <tr>
      <th width="8%">年级</th>
      <th width="8%">班级名称</th>
      <th width="10%">班主任</th>
      <th width="10%">学生数量</th>
      <th width="10%">本学期累计违规</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.iclass.grade.name %></td>
        <td><%= report.iclass.name %></td>
        <td><%= report.iclass.header %></td>
        <td><%= report.students %></td>
        <td><%= report.behaviors %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="3" style="text-align: center;"><strong>合计:</strong></td>
      <td><strong><%= @total_students %></strong></td>
      <td><strong><%= @total_behaviors %></strong></td>
    </tr>  
  </tbody>
</table>