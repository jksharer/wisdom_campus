<div class="row" id="query-form">
	<div class="col-sm-6">
		<%= form_tag({controller: "reports", action: "query"}, method: "get", remote: true) do %>
			<div class="form-group">
		    <%= label_tag :student, "学 号", class: "col-sm-2" %>
		    <div class="col-sm-8">
		      <%= text_field_tag(:student, {}, {class: "form-control"}) %>  
		    </div>
		    <div class="col-sm-2">
		      <%= submit_tag "查 找", name: "query", class: "btn btn-large btn-primary" %>  
		    </div>
		  </div>
		  <label class="col-sm-offset-1 col-sm-11"></label>
		  <div class="form-group">
		    <%= label_tag :semester, "学 期", class: "col-sm-2" %>
		    <div class="col-sm-10">
		      <%= select_tag(:semester, options_for_select(Semester.all.map { |s| [s.name, s.id] }),
		      	{ class: "form-control" }) %>  
		    </div>
		  </div>

		  <div class="form-group" id="submit">
		  	<div class="col-sm-offset-2 col-sm-4">
		  		<%= submit_tag "提 交", name: "submit", class: "btn btn-large btn-primary" %>
		  	</div>	
		  </div>
		<% end %>	  
	</div>

	<div class="col-sm-6" id="student-info">
	</div>
		
</div>