<%= form_for(@announcement, remote: true, html: { class: "form-horizontal", role: "form"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name, "公告名称", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>  
    </div>
  </div>

  <div class="form-group">
    <%= f.label :announcement_type, "公告类型", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :announcement_type, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, "公告内容", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :content, class: "form-control" %>
    </div>  
  </div>

  <div class="form-group">
    <%= f.label :procedure_id, "审批流程", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.select(:procedure_id, options_for_select(
        Procedure.all.map { |pro| [pro.name + " | " +steps_of_procedure(pro), pro.id] }), 
        {}, { class: "form-control"} ) %>
      </div>
  </div>  
  
  <div class="form-group">
    <label class="col-sm-2"></label>
    <div class="col-sm-2">
      <%= f.submit "保  存", name: "save", class: "btn btn-large btn-primary" %>  
    </div>
    <!-- <div class="col-sm-2">
      <%= f.submit "保存并提交", name: "save_and_submit", class: "btn btn-large btn-primary" %>  
    </div> -->
  </div>
<% end %>