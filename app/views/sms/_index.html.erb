<div class="top-links">
  <%= render 'shared/add_link', path: new_sm_path, name: '新短信' %>
</div>
<div id="sms" class="link-content">
  <table class="table">
    <thead>
      <tr>
        <th width="10%">流水号</th>
        <th width="10%">手机号码</th>
        <th width="60%">短信内容</th>
        <th width="10%">发送时间</th>
        <th width="10%">发送状态</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @sms.each do |sm| %>
        <tr>
          <td><%= sm.mid %></td>
          <td><%= sm.phone %></td>
          <td><%= sm.content %></td>
          <td><%= time_format_min(sm.send_time) %></td>
          <td><%= sm.status %></td>
          <td>
            <%= link_to 'x', sm, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
</div>