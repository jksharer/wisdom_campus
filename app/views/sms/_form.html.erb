<%= render 'shared/notice_heavy' %>
<%= form_for(@sm, remote: true, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :phone, "手机号码", class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, "短信内容", class: "col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :content, class: "form-control", rows: 4 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-2">
      <%= f.submit "保存并发送", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>