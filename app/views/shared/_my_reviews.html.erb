<%= image_tag("my_announcements.gif",alt: "我的审批") %>
<span class="head">我的审批</span>
<hr>
<div class="table-responsive">
  <table class="table table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th width="65%">标题</th>
        <th width="15%">发起人</th>
        <th width="20%">发起时间</th>
      </tr>
    </thead>

    <tbody>
      <% @being_reviews.each do |announcement| %>
        <tr>
          <td><%= link_to announcement.name, announcement_path(id: announcement.id, from: "home"), 
            remote: true %></td>
          <td><%= announcement.user.username %></td>
          <td><%= time_format(announcement.created_at.getlocal) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>