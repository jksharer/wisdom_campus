<%= image_tag("my_announcements.gif",alt: "我的公告") %>
<span class="head">我的公告</span>
<hr>
<%= will_paginate @announcements, :previous_label => '&#8592; ', :next_label => '&#8594;' %>
<div class="table-responsive">
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布人</th>
      <!-- <th>公告内容</th> -->
      <th>发布时间</th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= link_to announcement.name, announcement %></td>
        <td><%= announcement.user.username %></td>
        <!-- <td><%= announcement.content.truncate(30) %></td> -->
        <td><%= time_format(announcement.updated_at.getlocal) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>