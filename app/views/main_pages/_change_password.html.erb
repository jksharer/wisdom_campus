<%= render 'shared/notice' %>
<%= form_tag( { controller: "main_pages", action: "update_password", method: "patch" }, remote: true,
  html: { class: "form-horizontal", role: "form" }) do %>
  <div class="form-group row">
    <%= label_tag :password, "新密码", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= password_field_tag :password, {}, { class: "form-control" } %>  
    </div>
    <div class="col-sm-2"></div>
  </div>

  <div class="form-group row">
    <%= label_tag :password_confirmation, "新密码确认", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= password_field_tag :password_confirmation, {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= submit_tag "保  存", class: "btn btn-large btn-primary" %>
    </div>  
  </div>
<% end %>