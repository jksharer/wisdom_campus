<table class="table ">
  <thead>
    <tr>
      <th>学号</th>
      <th>姓名</th>
      <th>性别</th>
      <th>照片</th>
      <th>班级</th>
      <th>班级角色</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.sid, student, remote: true %></td>
        <td><%= link_to student.name, student, remote: true %></td>
        <td><%= student.gender %></td>
        <td><%= student.photo_url %></td>
        <td><%= student.iclass.name %></td>
        <td><%= student.class_roles.map { |role| role.name }.join(',') %></td>
        <td><%= link_to 'Edit', edit_student_path(student), remote: true %></td>
        <td><%= link_to 'Destroy', student, method: :delete, remote: true,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>