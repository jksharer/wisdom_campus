<%= form_for(:session, url: sessions_path, class: "input-group") do |f| %>
	<div class="input-row">
		<label>用户名</label>
		<%= f.text_field :username %>
	</div>

	<div class="input-row">
		<label>密码</label>
		<%= f.password_field :password %>
	</div>

	<div class="content-padded">
		<%= f.submit "登  陆", class: "btn btn-primary btn-block" %>
	</div>
<% end %>