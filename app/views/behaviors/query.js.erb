<% if @result_student.nil? %>  <!-- 未找到学生,提示重新输入 -->
	$("label#student-info").html("未找到该学生，请输入正确的学号.")	
	$("div#student-photo").html('<无效>')
<% else %>                     <!-- 找到学生,显示学生信息 --> 
	$("label#student-info").html('<%= "#{@result_student.name}, #{@result_student.iclass.grade.name}-#{@result_student.iclass.name}" %>')
	$("div#student-photo").html('<%= j render("student_photo") %>')
<% end %>    
