<%= form_for(@step, remote: true, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :view_order, "顺序", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.number_field :view_order, class: "form-control" %>  
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, "审批人", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.select(:user_id, options_for_select(User.all.map { |user| [user.username, user.id] }),
        {}, { class: "form-control" }) %>
      <%= hidden_field_tag(:procedure_id, @procedure.id) %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2"></label>
    <div class="col-sm-2">
      <%= f.submit "保  存", class: "btn btn-large btn-primary" %>  
    </div>
  </div>
<% end %>