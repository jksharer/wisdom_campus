<h1>Listing steps</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>流程</th>
      <th>顺序</th>
      <th>审批人</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= link_to step.procedure.name, step.procedure %></td>
        <td><%= step.view_order %></td>
        <td><%= step.user.username %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>